<!-- 银行卡绑定 -->
<wxs src="./../../../utils/common.wxs" module="common" />
<view class="_bankBinding">
  <form catchsubmit="formSubmit" bindreset="formReset">
    <view class="form_item  _code">
      <view class="item_left">
        <text class="title  _required">银行卡号</text>
        <input
          type="number"
          name="payAccount"
          bindinput="_bindinput"
          model:value="{{payAccount}}"
          data-type="payAccount"
          class="ipt"
          placeholder="请输入银行卡号"
          placeholder-class="_hint"
          maxlength="30"
        ></input>
        <view
          class="iconfont  icon-close"
          bindtap="delIpt"
          wx:if="{{payAccount.length}}"
          data-type="payAccount"
        ></view>
      </view>
      <view class="item_right" bindtap="scanCard">
        <text class="btn icon iconfont  icon-scan"></text>
      </view>
    </view>
    <view class="_worry" wx:if="{{common.cardNumbersFormat(payAccount)}}">
      {{common.cardNumbersFormat(payAccount)}}
    </view>
    <view class="form_item">
      <text class="title  _required">手机号</text>
      <input
        class="ipt"
        type="number"
        name="phone"
        bindinput="_bindinput"
        model:value="{{phone}}"
        data-type="phone"
        placeholder="请输入银行预留手机号"
        placeholder-class="_hint"
        maxlength="11"
      ></input>
      <view
        class="iconfont  icon-close"
        bindtap="delIpt"
        wx:if="{{phone.length}}"
        data-type="phone"
      ></view>
    </view>
    <view class="_worry" wx:if="{{common.iphoneFormat(phone)}}">
      {{common.iphoneFormat(phone)}}
    </view>
    <view class="form_item  _code">
      <view class="item_left">
        <text class="title  _required">验证码</text>
        <input
          type="number"
          name="verificationCode"
          bindinput="_bindinput"
          model:value="{{verificationCode}}"
          data-type="verificationCode"
          class="ipt"
          placeholder="请输入验证码"
          placeholder-class="_hint"
          maxlength="10"
        ></input>
      </view>
      <view class="item_right" bindtap="{{authCode=='获取验证码'?'getCode':''}}">
        <text class="btn">{{authCode}}</text>
      </view>
    </view>
    <!-- 底部 -->
    <view class="sub_wrap {{payAccount.length&&phone.length&&verificationCode.length?'_down':''}}">
      <button formType="submit" disabled="{{!(payAccount.length&&phone.length&&verificationCode.length)}}">
        确定
      </button>
    </view>
  </form>
</view>

