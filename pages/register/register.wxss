._register {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  overflow-y: auto;
  padding: 90rpx 80rpx 0;
  box-sizing: border-box;
}

._register ._login {
  height: 66rpx;
  margin-bottom: 30rpx;
}

._register ._login image {
  height: 100%;
}

._register ._title {
  font-family: PingFangSC-Medium;
  font-size: 52rpx;
  color: #233347;
  text-align: justify;
  line-height: 52rpx;
  height: 52rpx;
  margin-bottom: 110rpx;
}

._register form .form_item {
  display: flex;
  border-bottom: 2rpx solid #ECECEC;
}

._register form .form_item .title {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  width: 180rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #111500;
  text-align: justify;
}

._register form .form_item ._required::before {
  content: "*  ";
  color: #E9565C !important;
  width: 20rpx;
  font-size: 34rpx;
  height: 100rpx;
  line-height: 105rpx;
  display: inline-block;
  text-align: left;
  overflow: hidden;
}

._register form .form_item ._requiredNo::before {
  content: "*  ";
  color: transparent;
}

._register form .form_item .ipt {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #233347;
}

._register form .form_item .iconfont {
  margin-left: 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  width: 32rpx;
  color: #C2CAD4;
}

._register form .form_item ._address {
  min-height: 40rpx;
  margin: 30rpx 0 30rpx;
  line-height: 30rpx;
  position: relative !important;
}

._register form .form_item ._hint {
  color: rgba(35, 51, 71, 0.3);
}

._register form ._code {
  display: flex;
}

._register form ._code .item_left {
  display: flex;
}

._register form ._code .item_left .iconfont {
  margin-right: 24rpx;
}

._register form ._code .item_right {
  margin: auto 0;
  height: 48rpx;
  border-left: 2rpx solid #ECECEC;
}

._register form ._code .item_right .btn {
  padding: 0 12rpx;
  display: block;
  height: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #669CF6;
  text-align: center;
  line-height: 48rpx;
  width: 100%;
  white-space: nowrap;
}

._register form ._worry {
  height: 48rpx;
  line-height: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #E9565C;
  text-align: justify;
}

._register form .sub_wrap {
  padding: 64rpx 0;
}

._register form .sub_wrap button {
  background: #F2F2F2;
  border-radius: 8px;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(35, 51, 71, 0.35);
  width: 100%;
  box-shadow: 0 2px 4px 0 rgba(56, 116, 246, 0.1);
}

._register form ._down button {
  background: #669CF6;
  color: #FFFFFF;
}
