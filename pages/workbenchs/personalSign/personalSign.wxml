<!-- 邀请函=>到签到  invitationForeign -->
<wxs src="/utils/common.wxs" module="common" />
<view class="_personalSign">
  <view wx:if="{{showPage=='2'}}">
    <form catchsubmit="formSubmit" bindreset="formReset">
      <view class="form_item">
        <text class="title  _required">姓名</text>
        <input class="ipt" name="personalName" bindinput="_bindinput" model:value="{{personalName}}" data-type="personalName" placeholder="请输入姓名" placeholder-class="_hint" maxlength="30"></input>
        <view class="iconfont  icon-close" bindtap="delIpt" wx:if="{{personalName.length}}" data-type="personalName"></view>
      </view>
      <view class="form_item">
        <text class="title  _required">地址</text>
        <input class="ipt" name="place" bindinput="_bindinput" model:value="{{place}}" data-type="place" placeholder="请输入地址" placeholder-class="_hint" maxlength="18"></input>
        <view class="iconfont  icon-close" bindtap="delIpt" wx:if="{{place.length}}" data-type="place"></view>
        <view class="iconfont  icon-location" bindtap="chooseLoc" data-type="place"></view>
      </view>
      <!-- 底部 -->
      <view class="sub_wrap {{personalName.length&&place.length?'_down':''}}">
        <button formType="submit">确定</button>
      </view>
    </form>
  </view>
  <view wx:elif="{{showPage=='3'}}">
    <view class="_result">
      <view class="_resultsIcon">
        <image src="/assets/img/taskHallImgs/right.png" lazy-load="true" mode="heightFix"></image>
      </view>
      <view class="_resultsText">签到成功</view>
    </view>
  </view>
</view>